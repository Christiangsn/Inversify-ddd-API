{
  "compilerOptions": {
    "target": "es2019",                          
    "module": "commonjs",                     
    "lib": ["es6"],       
    "allowJs": true,                       
    "outDir": "./dist",                        
    "rootDir": "./src",      
    "removeComments": true,                  
    "typeRoots": [
      "./node_modules/@types",
      "./src/app/@types"
    ],                         
    "esModuleInterop": true,                  
    "resolveJsonModule": true,
    "experimentalDecorators": true,        
    "emitDecoratorMetadata": true,         
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {   
      "@domain/*": ["domain/*"],
      "@infra/*": ["infra/*"],
      "@presentation/*": ["presentation/*"],
      "@util/*": ["util/*"],
      "@data/*": ["data/*"],
      "@main/*": ["main/*"],
      "@validation/*": ["validation/*"],
      "@app/*": ["app/*"],
      "@config/*": ["config/*"]
    }
  },
  "include": [
    "src", "__test__/*"
  ],
  "exclude": ["node_modules"]
}